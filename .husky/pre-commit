#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run TypeScript check (always required)
echo "📝 Checking TypeScript..."
npx tsc --noEmit
if [ $? -ne 0 ]; then
  echo "❌ TypeScript errors found. Please fix them before committing."
  exit 1
fi

# Run linting with --fix to auto-fix what can be fixed (but don't block on errors)
echo "🧹 Running ESLint (auto-fix only)..."
npm run lint -- --fix --max-warnings 9999 || echo "⚠️  ESLint found issues but continuing..."

# Check for console.log statements (except in test files)
echo "🔍 Checking for console.log statements..."
if grep -r "console\.log" src/ --include="*.ts" --include="*.tsx" | grep -v "__tests__" | grep -v ".test." | grep -v ".spec."; then
  echo "❌ Found console.log statements in source code. Please remove them or use console.warn/error instead."
  echo "💡 You can use: npm run lint -- --fix to auto-fix some issues"
  exit 1
fi

# Check for TODO comments (warning only)
echo "📋 Checking for TODO comments..."
if grep -r "TODO:" src/ --include="*.ts" --include="*.tsx"; then
  echo "⚠️  Found TODO comments. Consider addressing them soon."
  echo "💡 You can continue with the commit, but please address TODOs in future commits."
fi

# Run tests only if they exist
if [ -f "jest.config.js" ]; then
  echo "🧪 Running tests..."
  npm run test:ci
  if [ $? -ne 0 ]; then
    echo "❌ Tests failed. Please fix them before committing."
    exit 1
  fi
fi

echo "✅ Pre-commit checks passed!"
echo "🚀 Ready to commit!"
echo "💡 Note: ESLint errors are allowed for now. Run 'npm run lint' to see all issues." 